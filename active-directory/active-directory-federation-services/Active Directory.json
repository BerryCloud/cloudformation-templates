        "KeyName" : {"Ref" : "KeyPair"},
        "SubnetId" : {"Ref" : "PrivateSubnet1"},        
        "UserData" : {"Fn::Base64" : {"Fn::Join" : ["",["<script>\n","cfn-init.exe -v -c config -s ",{"Ref" : "AWS::StackId"}," -r AD1"," --region ",{"Ref" : "AWS::Region"},"\n","</script>\n"]]}}
